# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/deaf_speech_collector

# Server Configuration
PORT=3000
NODE_ENV=development

# Storage Configuration
# Options: 'local' or 's3'
STORAGE_TYPE=local

# Local Storage (when STORAGE_TYPE=local)
UPLOAD_DIR=./uploads

# S3-Compatible Storage (when STORAGE_TYPE=s3)
# Works with AWS S3, Backblaze B2, Cloudflare R2, etc.
S3_ENDPOINT=https://c90f9011c5a59d5bf40c808f40e3e34b.r2.cloudflarestorage.com
S3_BUCKET=deaf-speech-recordings
S3_REGION=auto
AWS_ACCESS_KEY_ID=your_r2_access_key_here
AWS_SECRET_ACCESS_KEY=your_r2_secret_key_here

# Audio Validation Settings
REQUIRED_SAMPLE_RATE=16000
REQUIRED_CHANNELS=1
REQUIRED_FORMAT=wav
MAX_FILE_SIZE_MB=10

# API Settings
ENABLE_TEST_ENDPOINTS=true
ENABLE_CORS=true

# Optional: External Services
# WHATSAPP_API_KEY=your_key
# NOTIFICATION_EMAIL=admin@example.com
